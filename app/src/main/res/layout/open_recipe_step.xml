<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/timerResetTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="reset"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/timerStartTimer"
        app:layout_constraintTop_toBottomOf="@+id/openRecipeStepDesc" />

    <TextView
        android:id="@+id/timerTimeLeft"
        android:layout_width="153dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="00:00"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/timerStartTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="start"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/timerTimeLeft"
        app:layout_constraintTop_toBottomOf="@+id/openRecipeStepDesc" />

    <TextView
        android:id="@+id/openRecipeStepDesc"
        android:layout_width="401dp"
        android:layout_height="21dp"
        android:layout_marginTop="1dp"
        android:text="Описание этапа"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/openRecipeStepPosition"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/openRecipeStepPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Этап"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>